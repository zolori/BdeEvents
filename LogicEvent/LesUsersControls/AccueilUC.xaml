<UserControl x:Class="LogicEvent.AccueilUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogicEvent"
             mc:Ignorable="d" 
             Height="120" Width="850">

    <Border CornerRadius="0" BorderThickness="5" BorderBrush="Black" Margin="0,15" Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <Image Source="{Binding Image}" Height="70" Width="70" Margin="10"/>
            <TextBlock Text="{Binding Nom}" Style="{StaticResource Style_Titre}" Grid.Column="1" Margin="50,0,50,0" MinWidth="200"
                       HorizontalAlignment="Left"  VerticalAlignment="Center"/>
        </Grid>
    </Border>

</UserControl>
